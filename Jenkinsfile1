pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }
    
    stages {
        
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/Tejas886/Zomato1.git'
            }
        }
        
        stage ("Build Docker Image") {
            steps {
                sh "docker build -t tejasgowramma123/zomatoapp ."
            }
        }
        
        stage ("Tag & Push to DockerHub") {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-login', passwordVariable: 'dockerhubpass', usernameVariable: 'dockerhublogin')]) {
                        sh 'docker login -u ${dockerhublogin} -p ${dockerhubpass}'
                        sh "docker push tejasgowramma123/zomatoapp "
                    }
                }
            }
        }
        
        stage('Config & Deployment') {
            steps {
                
                withCredentials([aws(accessKeyVariable: 'AWS_ACCESS_KEY_ID', credentialsId: 'awslogin', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    dir('terraformfiles') {
                        // Ensure correct permissions for the private key
                        sh 'sudo chmod 400 bookmyshow.pem' 
                        sh 'terraform init'
                        sh 'terraform validate'
                        // The fix for the previous failure is inside main.tf, triggered by this command
                        sh 'terraform apply --auto-approve'
                    }
                }
            }
        }
    }
}
